{
  "compilerOptions": {
    // Frog
    "baseUrl": "./src",
    "paths": {
      "@grove/engine": ["engine/src"],
      "@grove/graphics": ["graphics/src"],
      "@grove/physics": ["physics/src"],
      "@grove/ecs": ["ecs/src"]
    },

    "types": [
      "vite/client",
      "vitest/importMeta"
    ],

    "declaration": true,
    "declarationDir": "lib",
    "declarationMap": true,
    "experimentalDecorators": true,
    "lib": [
      "WebWorker",
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts"
  ],
}