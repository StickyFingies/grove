{
  "name": "@grove/grove",
  "version": "1.0.0",
  "main": "./app/index.cjs",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn build && yarn electron:prod",
    "dev": "concurrently -k 'vite --force' 'yarn electron:dev'",
    "build": "vite build",
    "preview": "vite preview",
    "electron:prod": "electron-forge start",
    "electron:dev": "cross-env IS_DEV=true electron-forge start",
    "electron:build": "electron-forge make",
    "electron:package": "electron-forge package"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@types/animejs": "^3.1.4",
    "@types/dat.gui": "^0.7.7",
    "@types/offscreencanvas": "^2019.6.4",
    "@types/stats.js": "^0.17.0",
    "@types/three": "^0.138.0",
    "concurrently": "^7.0.0",
    "electron": "^17.1.0",
    "typescript": "beta",
    "vite": "^2.8.0"
  },
  "dependencies": {
    "@grove/ecs": "workspace:^",
    "@grove/engine": "workspace:^",
    "@grove/graphics": "workspace:^",
    "@grove/physics": "workspace:^",
    "animejs": "^3.2.1",
    "auto-bind": "^5.0.1",
    "cross-env": "^7.0.3",
    "dat.gui": "^0.7.9",
    "electron-squirrel-startup": "^1.0.0",
    "events": "^3.3.0",
    "mathjs": "^10.5.1",
    "stats.js": "^0.17.0",
    "three": "^0.149.0",
    "ws": "^8.11.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "dir": "./app"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "grove"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
